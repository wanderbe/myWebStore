<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.sidorovich.internetshop.web.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductCurdServlet</servlet-name>
        <servlet-class>com.sidorovich.internetshop.web.ProductCurdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCurdServlet</servlet-name>
        <url-pattern>/productcurd</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductsByGroupServlet</servlet-name>
        <servlet-class>com.sidorovich.internetshop.web.ProductsByGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsByGroupServlet</servlet-name>
        <url-pattern>/productsbygroup</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
