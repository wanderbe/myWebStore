<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/webstorefish?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    
    <mapping class="com.sidorovich.internetshop.domain.entity.Users"></mapping>
    <mapping class="com.sidorovich.internetshop.domain.entity.GroupOfProduct"></mapping>
    <mapping class="com.sidorovich.internetshop.domain.entity.ItemsInOrders"></mapping>
    <mapping class="com.sidorovich.internetshop.domain.entity.Orders"></mapping>
    <mapping class="com.sidorovich.internetshop.domain.entity.Products"></mapping>
    
  </session-factory>
</hibernate-configuration>
